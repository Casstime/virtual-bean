/* pages/my/index.wxss */
page {
    background-color: #ececec;
}
.header {
    display:flex;
    padding: 10px 20px;
    background-color: #fff;
}
.user-info {
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: center;
    margin-left: 15px;
}
.avatar-container {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
}
.avatar {
    width: 50px;
    height: 50px;
}
.item-bar {
    margin-top: 20px;
    padding-left: 20px;
    height: 50px;
    line-height: 50px;
    background-color: #fff;
}