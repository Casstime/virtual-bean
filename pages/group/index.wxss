/* pages/group/index.wxss */
page {
    background-color: #ececec;
}
.member-item {
    display: flex;
    justify-content: space-between;
    padding: 0 10px 0 20px;
    margin-top: 20px;
    height: 50px;
    border-bottom: solid 1px #eee;
    background-color: #fff;
    line-height: 50px;
}
.member-item:first-child {
    margin-top: 0;
}
image {
    position: relative;
    top: 4px;
    width: 20px;
    height: 20px;
}
.right-side {
    display: flex;
}
.gain-box, .remain-box {
    min-width: 60px;
}
button {
    margin: 20px 20px 0;
}