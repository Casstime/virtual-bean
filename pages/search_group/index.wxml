<!--pages/search_group/index.wxml-->
<view>
  <view class="search-bar">
    <input type="text" placeholder="搜索群组" name="search" bindinput="onInputKw" />
  </view>
  <view class="item" wx:for="{{results}}" wx:for-item="item">
    <text>{{item.name}}</text>
    <button type="primary" size="mini" data-id="{{item.id}}" bindtap="onJoin">加入</button>
  </view>
</view>
