<!--pages/search_group/index.wxml-->
<view>
  <view class="search-bar">
    <input type="text" placeholder="搜索群组" name="search" bindinput="onSearchGroup" focus="true" />
  </view>
  <view class="item" wx:for="{{results}}" wx:for-item="item" wx:key="{{item._id}}">
    <view class="inner">
      <text>{{item.name}}</text>
      <button type="primary" size="mini" wx:if="{{!item.hasJoined}}" data-id="{{item._id}}" bindtap="onJoin">加入</button>
      <button type="default" size="mini" disabled wx:else>已加</button>
    </view>
  </view>
</view>
